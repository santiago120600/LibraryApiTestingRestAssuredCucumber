{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Run Test",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "mainClass": "org.junit.runner.JUnitCore",
            "args": [
                "io.github.santiago120600.runners.AuthorTestRunner"
            ],
             "classPaths": [
                "$Test"
            ],
            "vmArgs": [
                "-Denv=mock",
                "-Dconfig=local",
                "-Dproxy=false",
            ]
        }
    ]
}